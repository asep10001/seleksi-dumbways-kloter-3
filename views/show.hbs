<div class="container" id="content">
      <div id="isi" class="card col-sm-12">
        <h1 class="provinsi">KABUPATEN/KOTA YANG TERDAPAT DI<br>{{results.[0].nama}}</h1>

        <img class="provinsi" src="{{results.[0].gambar}}">

        <div class="provinsi">
          <a href="javascript:void(0);" class="btn btn-sm btn-info edit" data-id="{{ results.[0].id }}" data-nama="{{ results.[0].nama }}" data-diresmikan="{{ results.[0].diresmikan }}" data-photo="{{ results.[0].photo }}" data-pulau="{{ results.[0].pulau }}">Edit</a>
          <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-id="{{ results.[0].id }} ">Delete</a>
        </div>
      </div>
    <div class="container">
          {{#each results}}
      <div id="isi" class="card col-sm-5">
    <h1>{{ Nama }}</h1>
    <h1>{{Diresmikan}}</h1>
    <img src={{pic}}>
    <div>
