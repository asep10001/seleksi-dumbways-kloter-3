    </div>
  </div>
    {{/each}}
    </div>
    <div class="container">
      <div class="card col-sm-12">
        <a id="kembali" href="/">Kembali</a>
      </div>
    </div>
</div>



 <!-- Modal Update provinsi-->

   <form action="/update" method="post">
       <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Edit Provinsi</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
            <div class="form-group">
                   <input type="text" name="nama" class="nama form-control" placeholder="Nama Provinsi" required>
               </div>
 
               <div class="form-group">
                   <input type="text" name="diresmikan" class="diresmikan form-control" placeholder="diresmikan" required>
               </div>
               <div class="form-group">
                   <input type="text" name="photo" class="photo form-control" placeholder="photo" required>
               </div>
               <div class="form-group">
                   <input type="text" name="pulau" class="pulau form-control" placeholder="pulau" required>
               </div>
            </div>
            <div class="modal-footer">
              <input type="hidden" name="id" class="id form-control">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </div>
        </div>
       </div>
  </form>

     <!-- Modal Delete provinsi-->
      <form id="add-row-form" action="/delete" method="post">
         <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
               <div class="modal-content">
                   <div class="modal-header">
              <h5 class="modal-title" id="myModalLabel">Delete Provinsi</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                   </div>
                   <div class="modal-body">
                      <strong>Anda yakin mau menghapus provinsi ini?</strong>
                   </div>
                   <div class="modal-footer">
                        <input type="hidden" name="id" class="form-control provinsi_tb" required>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Delete</button>
                   </div>
                    </div>
            </div>
         </div>
     </form>
<script src="/assets/js/jquery-3.3.1.js"></script>
<script src="/assets/js/bootstrap.js"></script>
<script>
    $(document).ready(function(){
            //tampilkan data ke modal untuk edit
      $('#content').on('click','.edit',function(){
        var nama = $(this).data('nama');
        var diresmikan = $(this).data('diresmikan');
        var photo = $(this).data('photo');
        var pulau = $(this).data('pulau');
        var id = $(this).data('id');
        $('#EditModal').modal('show');
        $('.id').val(id);
        $('.nama').val(nama);
        $('.diresmikan').val(diresmikan);
        $('.photo').val(photo);
        $('.pulau').val(pulau);
        $('.id').val(id);
      });
            //tampilkan modal hapus record
            $('#content').on('click','.delete',function(){
        var id = $(this).data('id');
        $('#DeleteModal').modal('show');
        $('.provinsi_tb').val(id);
      });
 
    });
</script>
